<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_let_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/left_text_color"
        android:textSize="@dimen/label_edittext_textSize" />

    <TextView
        android:id="@+id/tv_let_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_toLeftOf="@id/tv_let_right"
        android:layout_toRightOf="@id/tv_let_label"
        android:layout_marginLeft="10dp"
        android:maxWidth="90dp"
        android:gravity="center_vertical"
        android:background="@null"
        android:minWidth="30dp"
        android:singleLine="true"
        android:textColor="@color/gray_text_color_2"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/label_edittext_textSize" />
</RelativeLayout>