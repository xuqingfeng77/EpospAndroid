<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_main_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:background="@drawable/dialog_title_bg"
        android:textColor="@color/dialog_title_textColor"
        android:textSize="@dimen/dialog_title_textSize"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone" />

    <View
        android:id="@+id/line_t_view"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/dialog_line_bg_Color"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/messageGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:orientation="vertical"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="8dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/dialog_message_textColor"
            android:textSize="@dimen/dialog_message_textSize"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/horizontal_loadGroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/dialog_progress_loading_bg" />

        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="请稍后"
            android:textColor="@color/dialog_loading_textColor"
            android:textSize="@dimen/dialog_loading_textSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vertical_loadGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pulltorefresh_progress_loading_bg"
        android:gravity="center"
        android:minHeight="110dp"
        android:minWidth="110dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/verticalbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/dialog_progress_loading_bg" />

        <TextView
            android:id="@+id/Verticalloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/loading"
            android:textColor="@color/anhei"
            android:textSize="@dimen/dialog_loading_textSize" />
    </LinearLayout>

    <View
        android:id="@+id/line_b_view"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/dialog_line_bg_Color"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/btnGroup"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/dialog_cancel_btn_selector"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/cancel"
                android:textColor="@drawable/dialog_cancel_text_color_selector"
                android:textSize="@dimen/dialog_btn_textSize"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/btn_blue_bg_select"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:text="@string/ok"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_btn_textSize"
                android:visibility="gone" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_one"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_one_ok"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/btn_blue_bg_select"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center"
            android:text="@string/ok"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_btn_textSize"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>